{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ["src/.*\\.spec\\.ts$", "test/.*\\.e2e-spec\\.ts$"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.module.ts",
    "!src/main.ts",
    "!src/database/**",
    "!src/config/**",
    "!src/common/interceptors/logging.interceptor.ts",
    "!src/common/interceptors/performance.interceptor.ts",
    "!src/modules/cache/cache.health.ts",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testTimeout": 120000,
  "detectOpenHandles": true,
  "forceExit": true
}
